            <font>
                <Font name="Arial" size="20.0"/>
            </font>
        </CheckBox>
        <TextField fx:id="sourceField" layoutX="300.0" layoutY="156.0" prefHeight="32.0" prefWidth="163.0"
                   promptText="Enter IATA/ICAO">
            <font>
                <Font name="Arial" size="16.0"/>
            </font>
        </TextField>
        <TextField fx:id="destinationField" layoutX="300.0" layoutY="202.0" prefHeight="32.0" prefWidth="163.0"
                   promptText="Enter IATA/ICAO">
            <font>
                <Font name="Arial" size="16.0"/>
            </font>
        </TextField>
        <Label layoutX="70.0" layoutY="44.0" text="Filter Routes in Flight History">
            <font>
                <Font name="Arial" size="30.0"/>
            </font>
        </Label>
    </children>
